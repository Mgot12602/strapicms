{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "project",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "desc": {
      "type": "text",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "sourcelink": {
      "type": "string"
    },
    "livelink": {
      "type": "string"
    },
    "tag": {
      "type": "component",
      "repeatable": true,
      "component": "project.tag"
    },
    "slug": {
      "type": "string",
      "required": true
    },
    "excerpt": {
      "type": "string"
    },
    "date": {
      "required": true,
      "type": "date"
    }
  }
}
